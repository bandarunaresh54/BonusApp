<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="420dp"
    android:layout_margin="8dp"
    android:background="@drawable/bg_rounded_rectangle_blue">

    <View
        android:id="@+id/mainview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/headercolor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.82"/>

    <TextView
        android:id="@+id/code_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="THIRD777"
        android:textSize="18sp"
        android:background="@drawable/bg_rounded_rectangle_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#000000"
        android:padding="4dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintTop_toTopOf="@+id/mainview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.02"/>

    <TextView
        android:id="@+id/ribbinmsg_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.4"
        android:text="3rd Deposit"
        android:gravity="center"
        android:textSize="16sp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#ffffff"
        android:background="@drawable/bg_rounded_rectangle_green"
        app:layout_constraintHorizontal_bias="0.99"
        app:layout_constraintTop_toTopOf="@+id/mainview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.02"/>

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintWidth_percent="0.95"
        android:background="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/code_txt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.05"/>


    <TextView
        android:id="@+id/slab_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get 100% upto 2000"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.04"/>

    <TextView
        android:id="@+id/valid_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valid till 1 Jan,2099 03:32 PM"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintTop_toBottomOf="@+id/slab_percent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.02"/>

    <TextView
        android:id="@+id/hidedetails_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hide Details"
        android:textColor="#eba865"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintTop_toBottomOf="@+id/valid_txt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.04"/>

    <View
        android:layout_width="2dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@+id/valid_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.05"
        android:background="#000000"/>


    <TextView
        android:id="@+id/min_deposit_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Min. Deposit"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.04"/>

    <TextView
        android:id="@+id/min_slab_txt_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintTop_toBottomOf="@+id/slab_percent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.01"/>


    <TextView
        android:id="@+id/Applied_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Applied"
        android:textColor="#5dc516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintTop_toBottomOf="@+id/valid_txt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.04"/>


    <View
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintWidth_percent="0.98"
        android:background="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Applied_txt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.03"/>


    <TextView
        android:id="@+id/firstcolomn_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Purchase Amount"
        android:gravity="center"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/secondcolomn_txt"

        app:layout_constraintTop_toBottomOf="@+id/view3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.04"/>

    <TextView
        android:id="@+id/secondcolomn_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bonus Amount"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/firstcolomn_txt"
        app:layout_constraintEnd_toStartOf="@+id/thirdcolomn_txt"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="14sp"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.04"/>



    <TextView
        android:id="@+id/thirdcolomn_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Instant Amount"
        android:gravity="center"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/secondcolomn_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.04"/>


    <View
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintWidth_percent="0.98"
        android:background="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thirdcolomn_txt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.08"/>



    <TextView
        android:id="@+id/firstcolomn_dataone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1500"
        android:gravity="center"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/secondcolomn_datatwo"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        app:layout_constraintTop_toBottomOf="@+id/view4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.04"/>

    <TextView
        android:id="@+id/secondcolomn_datatwo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="30% (Max. 360)"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/firstcolomn_dataone"
        app:layout_constraintEnd_toStartOf="@+id/thirdcolomn_datathree"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintTop_toBottomOf="@+id/view4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="12sp"
        android:gravity="center"
        android:textStyle="bold"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        app:layout_constraintVertical_bias="0.04"/>



    <TextView
        android:id="@+id/thirdcolomn_datathree"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="5% (Max. 60)"
        android:gravity="center"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/secondcolomn_datatwo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintTop_toBottomOf="@+id/view4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="12sp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.04"/>




    <TextView
        android:id="@+id/firstcolomn1_dataone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1500"
        android:gravity="center"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/secondcolomn1_datatwo"
        app:layout_constraintTop_toBottomOf="@+id/firstcolomn_dataone"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.04"/>

    <TextView
        android:id="@+id/secondcolomn1_datatwo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="30% (Max. 360)"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/firstcolomn1_dataone"
        app:layout_constraintEnd_toStartOf="@+id/thirdcolomn1_datathree"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintTop_toBottomOf="@+id/firstcolomn_dataone"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="12sp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.04"/>



    <TextView
        android:id="@+id/thirdcolomn1_datathree"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="5% (Max. 60)"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/secondcolomn1_datatwo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintTop_toBottomOf="@+id/firstcolomn_dataone"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.04"/>


    <TextView
        android:id="@+id/firstcolomn2_dataone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1500"
        android:gravity="center"
        android:textColor="#000000"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/secondcolomn2_datatwo"

        app:layout_constraintTop_toBottomOf="@+id/firstcolomn1_dataone"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.04"/>

    <TextView
        android:id="@+id/secondcolomn2_datatwo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="30% (Max. 360)"
        android:textColor="#000000"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        app:layout_constraintStart_toEndOf="@+id/firstcolomn2_dataone"
        app:layout_constraintEnd_toStartOf="@+id/thirdcolomn2_datathree"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintTop_toBottomOf="@+id/firstcolomn1_dataone"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="12sp"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.04"/>



    <TextView
        android:id="@+id/thirdcolomn2_datathree"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="5% (Max. 60)"
        android:gravity="center"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/secondcolomn2_datatwo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintTop_toBottomOf="@+id/firstcolomn1_dataone"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.04"/>


    <TextView
        android:id="@+id/forevery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For every 100 bet, 6 will be\nreleased from the bonus anount"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintTop_toBottomOf="@+id/mainview"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.5"/>

    <TextView
        android:id="@+id/forexpire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bonus expiry 10 days\n from ths issue"
        android:textColor="#F5FFFA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintTop_toBottomOf="@+id/mainview"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="12sp"
        android:padding="2dp"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.5"/>



</androidx.constraintlayout.widget.ConstraintLayout>
</layout>